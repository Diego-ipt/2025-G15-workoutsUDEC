				{
					"name": "GET Exercise by ID - Exitoso (Caso Positivo)",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Status code is 200\", () => pm.response.to.have.status(200));",
									"const data = pm.response.json();",
									"pm.test(\"Returns the correct exercise\", () => {",
									"    const expected_id = parseInt(pm.environment.get(\"temp_exercise_id\"));",
									"    pm.expect(data.id).to.eql(expected_id);",
									"});",
									""
								],
								"type": "text/javascript",
								"packages": {},
								"requests": {}
							}
						},
						{
							"listen": "prerequest",
							"script": {
								"exec": [
									"// Este pre-request corre antes para asegurarse que exista el ID de ejercicio temporalmente\r",
									"\r",
									"const createExerciseRequest = {\r",
									"  url: pm.environment.get('base_url') + '/api/exercises/',\r",
									"  method: 'POST',\r",
									"  header: {\r",
									"    'Content-Type': 'application/json',\r",
									"    'Authorization': 'Bearer ' + pm.environment.get('admin_token')\r",
									"  },\r",
									"  body: {\r",
									"    mode: 'raw',\r",
									"    raw: JSON.stringify({\r",
									"      name: 'Temp Exercise for GET by ID Test',\r",
									"      description: 'Ejercicio temporal.',\r",
									"      exercise_type: 'WEIGHT_BASED'\r",
									"    })\r",
									"  }\r",
									"};\r",
									"\r",
									"pm.sendRequest(createExerciseRequest, (err, res) => {\r",
									"  if (err) {\r",
									"    console.error(\"Error al crear el ejercicio temporal:\", err);\r",
									"  } else if (res.code === 200) {\r",
									"    const responseBody = res.json();\r",
									"    console.log(`Pre-request: Ejercicio temporal creado con ID: ${responseBody.id}`);\r",
									"    pm.environment.set('temp_exercise_id', responseBody.id);\r",
									"  } else {\r",
									"      console.error(\"La creación del ejercicio temporal falló con status:\", res.code, \"y body:\", res.text());\r",
									"  }\r",
									"});"
								],
								"type": "text/javascript",
								"packages": {},
								"requests": {}
							}
						}
					],
					"request": {
						"auth": {
							"type": "bearer",
							"bearer": [
								{
									"key": "token",
									"value": "{{user_token}}",
									"type": "string"
								}
							]
						},
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/api/exercises/{{temp_exercise_id}}",
