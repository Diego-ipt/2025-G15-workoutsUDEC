	"item": [
		{
			"name": "Login - Admin Exitoso (Caso Positivo)",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"// Test de status code",
							"pm.test(\"Status code is 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"// Test de estructura de respuesta",
							"pm.test(\"Response has access token and token type\", function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData).to.have.property('access_token');",
							"    pm.expect(jsonData).to.have.property('token_type');",
							"});",
							"",
							"// Test de tipo de token",
							"pm.test(\"Token type is bearer\", function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData.token_type).to.eql('bearer');",
							"});",
							"",
							"// Test de formato del token",
							"pm.test(\"Access token is not empty and is string\", function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData.access_token).to.be.a('string');",
							"    pm.expect(jsonData.access_token.length).to.be.above(0);",
							"});",
							"",
							"// Guardar token para requests futuros",
							"pm.environment.set('admin_token', pm.response.json().access_token);",
							"",
							"// Test de tiempo de respuesta",
							"pm.test(\"Response time is less than 2000ms\", function () {",
							"    pm.expect(pm.response.responseTime).to.be.below(2000);",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/x-www-form-urlencoded"
					}
				],
				"body": {
					"mode": "urlencoded",
					"urlencoded": [
						{
							"key": "username",
							"value": "admin@example.com",
							"type": "text"
						},
						{
							"key": "password",
							"value": "admin123",
							"type": "text"
						}
					]
				},
				"url": {
					"raw": "{{base_url}}/api/auth/login",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"api",
						"auth",
						"login"
					]
				},
				"description": "Login exitoso de administrador - Caso positivo estándar"
			}
		},
		{
			"name": "Login - Credenciales Incorrectas (Caso Negativo)",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"// Test de status code",
							"pm.test(\"Status code is 400 Bad Request\", function () {",
							"    pm.response.to.have.status(400);",
							"});",
							"",
							"// Test de mensaje de error",
							"pm.test(\"Response contains error detail\", function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData).to.have.property('detail');",
							"});",
							"",
							"// Test de contenido del mensaje",
							"pm.test(\"Error message is about incorrect credentials\", function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData.detail.toLowerCase()).to.include('incorrect');",
							"});",
							"",
							"// Test que NO se devuelve token",
							"pm.test(\"No access token in response\", function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData).to.not.have.property('access_token');",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
