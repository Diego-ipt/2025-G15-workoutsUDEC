{
	"info": {
		"_postman_id": "auth-collection-2024",
		"name": "Workout Tracker API - Authentication Tests",
		"description": "Colección completa de tests para endpoints de Autenticación con casos positivos, negativos y límite",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
